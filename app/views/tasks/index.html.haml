.Header
  .HeaderTitle
    %h2 ToDo App
  .HeaderEdit
    %h2 
      ユーザー名:
      = current_user.name
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: 'icon')
.Main
  .Mainbox
    .Name
      %h3 仕事🖥
    .Form
      = link_to 'タスク追加＋', new_job_path, class:"p"
    .Taskzone
      - @jobs.each do |job|
        .Task
          .Checkbox
            %input.Box{type: "checkbox"}
          .Contentbox
            .Content
              = link_to job_path(job.id), class: "task" do
                = job.task
            .Sub
              = link_to '削除🗑', job_path(job.id), method: :delete, class:"delete"
              = link_to '編集✒️', edit_job_path(job.id), class:"edit"
              

